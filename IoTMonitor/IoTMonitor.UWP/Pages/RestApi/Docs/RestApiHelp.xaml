<UserControl
    x:Class="AppStudio.Uwp.Samples.RestApiHelp"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid
        Background="{StaticResource AppBackground}">
        <ScrollViewer
            ScrollViewer.VerticalScrollBarVisibility="Auto">
            <RichTextBlock
                Margin="24"
                TextWrapping="Wrap"
                Foreground="{StaticResource AppForeground}">
                <Paragraph>
                    <Run
                        FontSize="32"
                        Text="REST API Data Provider Help" />
                </Paragraph>
                <Paragraph />
                <Paragraph>
                    <Run x:Uid="HelpDataProvidersInfo"/>
                </Paragraph>
                <Paragraph />
                <Paragraph>
                    <Run x:Uid="HelpRestApi1"/>
                </Paragraph>
                <Paragraph />
                 <Paragraph>
                    <Run FontSize="25" x:Uid="HelpRestApi2Title"/>
                </Paragraph>
                <Paragraph>
                    <Run x:Uid="HelpRestApi2"/>
                </Paragraph>
                 <Paragraph />
                 <Paragraph>
                    <Run FontSize="25" x:Uid="HelpRestApi3Title"/>
                </Paragraph>
                <Paragraph>
                    <Run x:Uid="HelpRestApi3"/>
                </Paragraph>
                 <Paragraph />
                 <Paragraph>
                    <Run FontSize="25" x:Uid="HelpRestApi4Title"/>
                </Paragraph>
                <Paragraph>
                    <Run x:Uid="HelpRestApi4"/>
                </Paragraph>
                 <Paragraph />
                 <Paragraph>
                    <Run FontSize="25" x:Uid="HelpRestApi5Title"/>
                </Paragraph>
                <Paragraph>
                    <Run x:Uid="HelpRestApi5"/>
                </Paragraph>
                 <Paragraph />
                <Paragraph>
                    <Run x:Uid="HelpViewCode"/>
                </Paragraph>
                <Paragraph>
                    <Hyperlink
                        NavigateUri="https://github.com/wasteam/waslibs/tree/master/src/AppStudio.DataProviders/RestApi">
                        https://github.com/wasteam/waslibs/tree/master/src/AppStudio.DataProviders/RestApi
                    </Hyperlink>
                </Paragraph>
                <Paragraph />
            </RichTextBlock>
        </ScrollViewer>
    </Grid>
</UserControl>